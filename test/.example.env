# Application Setup
APP_TITLE=envtest
APP_HOST=envtest.example.com
APP_PATH=/v1
APP_PORT=80
GIN_MODE=debug
TIMEZONE=
TRUST_PROXY=localhost

# Database
## Auto create DB schema if not exists: if 'true'. DB_USER has to have the privileges accordingly. (i.e. CREATE database and CREATE table.)
AUTO_CREATE_DB_SCHEMA=false
DB_TYPE=mysql

DB_INIT_USER=user
DB_INIT_PASSWORD=password
DB_INIT_PARAMS=parseTime\=true
DB_USER=user
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=3306
DB_NAME=pilgrims
DB_PARAMS=parseTime\=true
DB_MAX_OPEN=10
DB_MAX_IDLE=10
DB_LIFE_TIME=120
DB_IDLE_TIME=90

# JWT
JWT_SIGNING_KEY=my_jwt_signing_key
JWT_SIGNING_METHOD=HS512 # JWT_SIGNING_METHOD: HS256, HS384, HS512

# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=user@example.com
SMTP_PASSWORD=password
SMTP_DISPLAY_NAME=name
SMTP_DISPLAY_EMAIL=user@example.com

# Face
DIR_FACE_RECOGNIZATION_MODELS=static/models
